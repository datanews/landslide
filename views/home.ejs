<!doctype html>
<html class="no-js" lang="">
  <head>
    <%- include('head.inc.ejs') %>
  </head>

  <body>
    <%- include('nav.inc.ejs') %>

    <div id="home-template-container" class="container"></div>

    <script id="home-template" type="text/ractive">
      <div class="loading {{#isLoading}}is-loading{{/isLoading}}">
        <span><i class="fa fa-spinner fa-pulse"></i> Loading...</span>
      </div>

      <form class="filter-form form-inline">
        <div class="form-group">
          <label for="filter-state">Filter by state</label>

          <select class="form-control" value="{{ state }}" id="filter-state">
            <option selected disabled>Choose</option>
            {{#states:s}}
              <option value="{{ this }}">{{ this }}</option>
            {{/states}}
          </select>
        </div>

        {{#lastFetch}}
          <div class="pull-right">
            <p class="text-muted"><small>Data as of {{ lastFetch.fromNow() }}.</small></p>
          </div>
        {{/lastFetch}}
      </form>

      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Report</th>
              <th>Wait</th>
              <th>City</th>
              <th>Zip</th>
              <th>Phone</th>
              <th>Updated</th>
            </tr>
          </thead>

          <tbody>
            {{#data}}
              {{#(!../state || (../state && ../state === state))}}
                <tr>
                  <td>{{ ElectionReport.value }}</td>
                  <td>{{ ElectionWait.value }}</td>
                  <td>{{ city }}</td>
                  <td>
                    {{#zip}}
                      <a target="_blank" rel="noopener" href="https://maps.google.com/maps?q={{ zip }}">{{ zip }}</a>
                    {{/zip}}
                  </td>
                  <td>{{#canContact}}{{ phone }}{{/canContact}}</td>
                  <td>
                    {{#updatedM}}
                      <span title="{{ ElectionReport.updated }}">{{ updatedM.fromNow() }}</span>
                    {{/updatedM}}
                  </td>
                </tr>
              {{/()}}
            {{/data}}
          </tbody>
        </table>
      </div>
    </script>

    <%- include('scripts.inc.ejs') %>
  </body>
</html>
